
from selenium import webdriver
import time


def login_flow(driver):
    driver.get("https://react-redux.realworld.io/")
    driver.find_element_by_css_selector('[href="#login"]').click()
    driver.find_element_by_css_selector('[placeholder="Email"]').send_keys("deltaaa@gmail.com")
    driver.find_element_by_css_selector('[placeholder="Password"]').send_keys("1234567890")
    driver.find_element_by_css_selector('[type="submit"]').click()


# Sign In
driver = webdriver.Chrome()
login_flow(driver)
time.sleep(5)
# log out
driver.find_element_by_css_selector('[href="#settings"]').click()
driver.execute_script("window.scrollTo(0, document.body.scrollHeight);")
driver.find_element_by_css_selector('.btn.btn-outline-danger').click()

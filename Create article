from selenium import webdriver

# Sign In
driver = webdriver.Chrome()
driver.get("https://react-redux.realworld.io/")
driver.find_element_by_css_selector('[href="#login"]').click()
driver.find_element_by_css_selector('[placeholder="Email"]').send_keys("deltaaa@gmail.com")
driver.find_element_by_css_selector('[placeholder="Password"]').send_keys("1234567890")
driver.find_element_by_css_selector('[type="submit"]').click()

# create article
driver.find_element_by_css_selector('[href="#editor"]').click()
driver.find_element_by_css_selector('[placeholder="Article Title"]').send_keys('Delta team article')
driver.find_element_by_css_selector('[placeholder="What\'s this article about?"]').send_keys("Our work in team")
driver.find_element_by_css_selector('[placeholder="Write your article (in markdown)"]').send_keys(
    "The best article ever.")
driver.find_element_by_css_selector('[placeholder="Enter tags"]').send_keys("team")
driver.find_element_by_css_selector('[type="button"]').click()
driver.quit()
